<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#1b2d4f"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ufape.MainActivityUfape">

    <include
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        layout="@layout/activity_ufape_cabecalho_menu_lateral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/botao_menu_lateral_inicio"
                android:onClick="clickBotaoMenuLateralInicio"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ufape_botao_customizado_menu_lateral"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                >

                <info.androidhive.fontawesome.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_home_solid"
                    android:textColor="#000000"
                    android:textSize="22dp"
                    android:layout_marginRight="10dp"
                    app:solid_icon="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="InÃ­cio"
                    android:textColor="#000000"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/botao_menu_lateral_siga"
                android:onClick="clickBotaoMenuLateralSiga"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="Sig@"
                android:textColor="#000000"
                android:background="@drawable/ufape_botao_customizado_menu_lateral"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                />

            <TextView
                android:id="@+id/botao_menu_lateral_biblioteca"
                android:onClick="clickBotaoMenuLateralBiblioteca"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="Biblioteca"
                android:textColor="#000000"
                android:background="@drawable/ufape_botao_customizado_menu_lateral"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                />

            <LinearLayout
                android:id="@+id/botao_menu_lateral_contato"
                android:onClick="clickBotaoMenuLateralContato"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ufape_botao_customizado_menu_lateral"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                >

                <info.androidhive.fontawesome.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_id_badge_solid"
                    android:textColor="#000000"
                    android:textSize="22dp"
                    android:layout_marginRight="10dp"
                    app:solid_icon="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Contato"
                    android:textColor="#000000"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/botao_menu_lateral_editais"
                android:onClick="clickBotaoMenuLateralEditais"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ufape_botao_customizado_menu_lateral"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                >

                <info.androidhive.fontawesome.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_file"
                    android:textColor="#000000"
                    android:textSize="22dp"
                    android:layout_marginRight="10dp"
                    app:solid_icon="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Editais"
                    android:textColor="#000000"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/botao_menu_lateral_solicita"
                android:onClick="clickBotaoMenuLateralSolicita"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ufape_botao_customizado_menu_lateral"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="0dp"
                >

                <info.androidhive.fontawesome.FontTextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ufape_logo_solicita"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    app:solid_icon="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Solicita"
                    android:textColor="#000000"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/botao_menu_lateral_submeta"
                android:onClick="clickBotaoMenuLateralSubmeta"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ufape_botao_customizado_menu_lateral"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                >

                <info.androidhive.fontawesome.FontTextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ufape_logo_submeta"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:layout_marginLeft="0dp"
                    app:solid_icon="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Submeta"
                    android:textColor="#000000"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <LinearLayout
                android:id="@+id/botao_menu_lateral_sobre"
                android:onClick="clickBotaoMenuLateralSobre"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ufape_botao_customizado_menu_lateral"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                >

                <info.androidhive.fontawesome.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_info_circle_solid"
                    android:textColor="#000000"
                    android:textSize="22dp"
                    android:layout_marginRight="10dp"
                    app:solid_icon="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Sobre"
                    android:textColor="#000000"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />

            <include
                layout="@layout/activity_ufape_redes_sociais_menu_lateral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>